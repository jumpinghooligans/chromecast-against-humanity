extends ../layout

block content
	h2 Ready Up
	hr

	h3 Players
	if response.game.players.length > 0
		ul#readyList
			each player in response.game.players
				li
					if player.username == activeuser.username
						.status: a(href='readyToggle?to=' + response.readyUrl, class='btn btn-default') #{response.readyText}
					else
						.status #{player.status}
					.name #{player.username}
	else
		p: em No players are connected...


	h3 Chromecasts
	if response.game.chromecasts.length > 0
		ul
			each chromecast in response.game.chromecasts
				li #{chromecast.username}
	else
		p: em No chromecasts are connected...

	p
		a(href='join') Join Game
	p
		input(type='button', value='Open Session', id='openSession', disabled="disabled")

	