*
	box-sizing border-box

body
	font 14px Helvetica, Arial, sans-serif
a
	color #00B7FF

.btn
	margin-left 5px
	margin-right 5px

#header
	position relative
	
	background-color black
	color white
	box-shadow 0 0 10px #555
	transition background-color 1s

	.user
		float right
		position relative
		z-index 51
		
		a
			color white
	
	h1
		background-color black
		font-size 36pt
		margin 0
		padding 0.5em 0
		font-weight bold
		
		position relative
		z-index 50
		
		a
			color white
			
			&:hover
				text-decoration none
	
	.inner
		background-color black
		width 1024px
		margin auto
		padding 1em
		padding-bottom 0
		
		#nav
			list-style-type none
			margin 0
			padding 0
			
			>li
				position relative
				display inline-block 
				height 100%
				
				a
					position relative
					z-index 50
					
					background-color black
					color white
					display block
					font-size 18pt
					padding 0.5em 1em
					transition background-color 0.25s
					
				&:hover
					a
						background-color white
						color black
						text-decoration none
						
				ul
					list-style-type none
					top -100%
					position absolute
					z-index 5
					width 100%
					margin 0 
					padding 0
					box-shadow 0 0 5px #ccc
					
					transition top 0.2s ease
					
					li
						a
							font-size 12pt
						
					
				&:hover

					ul
						top 100%

						li
							a
								color white
								background-color black
								transition background-color 0.25s
								
								&:hover
									color black
									background-color white
						
					

					

#header.hover
	// background-color red
	// color black
	
	a
		// color black
	.inner
		#nav
			li
				a
					// color black

#container
	width 1024px
	margin 0 auto
	padding 1em

	box-shadow 0 0 10px #ccc
	border-bottom-right-radius 10px
	border-bottom-left-radius 10px

#content
	padding 0 1em
	
#userList
	list-style-type none
	padding 0
	margin 1em 0
	
	li
		display block
		
		a
			display inline-block
			background-color white
			color black
			padding 0.5em
			margin-bottom 5px
			font-size 16pt
			transition background-color 0.25s
			
			&:hover
				text-decoration none
				color white
				background-color black
				

#gameList
	list-style-type none
	padding 0
	margin 1em 0
	
	li
		display block
		background-color white
		transition background-color 0.25s
		padding 0.5em
		
		a
			display block
			color black
			margin-bottom 5px
			font-size 16pt
			
		&:hover
			background-color black
			
			a
				text-decoration none
				color white
			
			.creator
				color white
				
		.creator
			float right
			
#readyList
	list-style-type none
	padding 0
	margin 1em 0
	
	li
		overflow auto
		background-color white
		display block
		transition background-color 0.2s
		
		div
			color black
			padding 0.5em
			font-size 16pt
		
		&:hover
			background-color black
			
			div
				color white
				
		.status
			float right

#myChromecast
	float right
	
#chromecastList
	list-style-type none
	padding 0
	margin 1em 0
	
	li
		overflow auto
		background-color white
		display block
		transition background-color 0.25s
		color black
		padding 0.5em
		margin-bottom 5px
		font-size 16pt
		
		&:hover
			background-color black
			color white
	
#card-list
	background-color #eee
	
	>div
		width 50%
		padding 1em
		float left

#example
	text-align center
		
.card
	position relative
	display inline-block
	margin 10px
	width 200px
	height 300px
	border-radius 10px
	box-shadow 0 0 15px #555
	
	.text
		font-size 14pt
		padding 0.5em
		height 275px
		overflow auto
		
		span
			color red;

	.expansion
		position absolute 
		display block
		text-align center
		bottom 5px
		width 100%
		
.card.question 
	background-color black
	color white
	
.card.answer
	background-color white
	color black